@model Mangos.Mvc.Models.ViewModels.PessoaGeoModel

<div>
    <div class="form-group">
        <div class="col-md-7">

            @Html.Label("", "Latitude/Longitude", htmlAttributes: new { @class = "control-label lb-sm" })
            <div class="input-group">

                @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control input-sm" } })
                <div class="input-group-addon">/</div>
                @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control input-sm" } })

                <span class="input-group-btn">
                    <button type="button" class="btn btn-sm" onclick="setaGps()">Buscar</button>
                </span>
            </div>

            @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
        </div>
    </div>
</div>