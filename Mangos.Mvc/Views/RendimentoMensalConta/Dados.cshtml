@model Mangos.Mvc.Models.ViewModels.RendimentoMensalContaDadosModel

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    ViewData["Title"] = "Cadastro do rendimento mensal de contas";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.GrupoId)
        @Html.HiddenFor(model => model.Hash)

        <div class="form-group row">
            @Html.LabelFor(model => model.ContaBancariaId, new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-7">
                <select asp-for="ContaBancariaId" class="form-control form-control-sm" asp-items="@(new SelectList(Model.ContasBancarias, "Id", "Descricao", null))">
                    <option value="">Nenhum</option>
                </select>
                <span asp-validation-for="ContaBancariaId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.MesReferencia, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.MesReferencia, "{0:MM/yyyy}", new { @class = "form-control form-control-sm campoMesAno" })
                @Html.ValidationMessageFor(model => model.MesReferencia, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control form-control-sm campoValor" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}