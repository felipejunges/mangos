@model IEnumerable<Mangos.Mvc.Models.ViewModels.RendimentoMensalContaListaModel>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MesReferencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContaBancaria)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MesReferencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContaBancaria)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td style="text-align: right;">
                        <open-modal-icon controller="RendimentoMensalConta" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="RendimentoMensalConta" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
