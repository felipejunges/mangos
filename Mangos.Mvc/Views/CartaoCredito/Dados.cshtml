@model Mangos.Mvc.Models.ViewModels.CartaoCreditoDadosModel

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    ViewData["Title"] = "Cadastro do cartão de crédito";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.GrupoId)
        @Html.HiddenFor(model => model.Hash)

        <div class="form-group row">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CategoriaId" class="col-md-2 text-md-right col-form-label col-form-label-sm"></label>
            <div class="col-md-4">
                <select asp-for="CategoriaId" class="form-control form-control-sm" asp-items="@(new SelectList(Model.Categorias, "Id", "DescricaoComSuperior", null))">
                    <option value="">Nenhum</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ValorLimite, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ValorLimite, new { htmlAttributes = new { @class = "form-control form-control-sm campoValor" } })
                @Html.ValidationMessageFor(model => model.ValorLimite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.DiaFechamento, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DiaFechamento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.DiaFechamento, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.DiaVencimento, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DiaVencimento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.DiaVencimento, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                <div class="checkbox">
                    <label class="col-form-label-sm">
                        @Html.EditorFor(model => model.OffsetReferenciaVencimento)
                        @Html.DisplayNameFor(model => model.OffsetReferenciaVencimento)
                    </label>
                    @Html.ValidationMessageFor(model => model.OffsetReferenciaVencimento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-6 offset-md-2">
                <div class="checkbox">
                    <label class="col-form-label-sm">
                        @Html.EditorFor(model => model.ExibirDadosRelatorio)
                        @Html.DisplayNameFor(model => model.ExibirDadosRelatorio)
                    </label>
                    @Html.ValidationMessageFor(model => model.ExibirDadosRelatorio, "", new { @class = "text-danger" })
                </div>
                
                <div class="checkbox">
                    <label class="col-form-label-sm">
                        @Html.EditorFor(model => model.GerarLancamentoFecharMes)
                        @Html.DisplayNameFor(model => model.GerarLancamentoFecharMes)
                    </label>
                    @Html.ValidationMessageFor(model => model.GerarLancamentoFecharMes, "", new { @class = "text-danger" })
                </div>
                
                <div class="checkbox">
                    <label class="col-form-label-sm">
                        @Html.EditorFor(model => model.Ativo)
                        @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                    @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}
