@model Mangos.Mvc.Models.ViewModels.MetaSaldoDadosModel

@{
    ViewData["Title"] = "Cadastro da meta de saldo";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.GrupoId)
        @Html.HiddenFor(model => model.Hash)

        <div class="form-group row">
            @Html.LabelFor(model => model.Mes, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Mes, "{0:MM/yyyy}", new { @class = "form-control form-control-sm campoMesAno" })
                @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control form-control-sm campoValor" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
