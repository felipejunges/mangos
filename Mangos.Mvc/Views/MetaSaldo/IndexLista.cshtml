@model IEnumerable<Mangos.Dominio.Entities.MetaSaldo>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mes)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mes)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td class="text-right">
                        <open-modal-icon controller="MetaSaldo" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="MetaSaldo" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
