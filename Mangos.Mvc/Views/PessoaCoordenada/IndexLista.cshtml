@model IEnumerable<Mangos.Dominio.Entities.PessoaCoordenada>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td class="text-right">
                        <open-modal-icon controller="PessoaCoordenada" action="Dados" value="@item.Id.ToString()" query-name="Pessoa" query-value="@item.PessoaId" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="PessoaCoordenada" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }

    </table>
</div>

