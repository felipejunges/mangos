@model IEnumerable<Mangos.Dominio.Entities.PessoaCoordenada>

@{
    ViewData["Title"] = "Cadastro das coordenadas da pessoa";
}

<div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="p-2 bd-highlight margin-auto">
        <div class="btn-group bootstrap-navbar-btn-group">
            <open-modal-button controller="PessoaCoordenada" action="Dados" value="0" class="btn btn-sm btn-info" query-name="Pessoa" query-value="@ViewData["PessoaId"]" glyph-icon="plus-square">Incluir</open-modal-button>
            <a class="btn-sm btn-light btn" href="@Url.Content("~/Pessoa")" role="button">Voltar</a>
        </div>
    </div>
</div>

<nav class="borda-conteudo">
    <div class="titulo-filtro">
        <span class="fa fa-search" aria-hidden="true"></span> Pesquisa
    </div>

    <form asp-action="IndexLista" asp-controller="PessoaCoordenada" id="form-busca" method="get" data-ajax="true" data-ajax-update="#listaAjax" class="navbar-form navbar-left">
        <input type="hidden" id="Id" name="Id" value="@ViewData["PessoaId"]" />
        <div class="form-group offset-md-1">
            <button type="submit" class="btn btn-info btn-sm" glyph-icon="search">Procurar</button>
        </div>
    </form>
</nav>

<div id="listaAjax" class="borda-conteudo">
    @await Html.PartialAsync("IndexLista", Model)
</div>

