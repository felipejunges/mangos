@model IEnumerable<Mangos.Dominio.Models.Relatorios.RelatorioProjecaoSaldoModel>

@{
    ViewData["Title"] = "Relatório de projeção de saldo";
}

<div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>

<nav class="borda-conteudo">
    <div class="titulo-filtro">
        <span class="fa fa-search" aria-hidden="true"></span> Pesquisa
    </div>

    <form asp-action="IndexLista" asp-controller="RelatorioProjecaoSaldo" id="form-busca" method="get" data-ajax="true" data-ajax-update="#listaAjax" class="navbar-form navbar-left">

        <div class="form-group row">
            <label for="Busca_DataFinal" class="col-md-1 text-md-right col-form-label col-form-label-sm">Data</label>
            <div class="col-md-2">
                <input type="text" class="form-control form-control-sm campoData" name="dataFinal" id="Busca_DataFinal" value="@ViewData["DataFinal"]" />
            </div>

            <label for="Busca_ValorInicial" class="col-md-1 text-md-right col-form-label col-form-label-sm">Valor inicial</label>
            <div class="col-md-2">
                @Html.TextBox("valorInicial", "0,00", new { @class = "form-control form-control-sm campoValor", @id = "Busca_ValorInicial" })
            </div>
        </div>

        <div class="form-group offset-md-1">
            <button type="submit" class="btn btn-info btn-sm" glyph-icon="search">Procurar</button>
        </div>
    </form>
</nav>

<div id="listaAjax" class="borda-conteudo">
    @await Html.PartialAsync("IndexLista", Model)
</div>
