@model IEnumerable<Mangos.Mvc.Models.ViewModels.LancamentoFixoListaModel>

@{
    ViewData["Title"] = "Relatório geração de lançamentos";
}

<div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="p-2 bd-highlight margin-auto">
        <div class="btn-group bootstrap-navbar-btn-group">
            <a class="btn-sm btn-light btn" href="@Url.Content("~/LancamentoFixo")" role="button">Voltar</a>
        </div>
    </div>
</div>

<div id="listaAjax" class="borda-conteudo">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Periodicidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataHoraUltimaGeracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataUltimoMesGerado)
                </th>
            </tr>

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5" class="text-center">Nenhum resultado encontrado</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @item.Periodicidade.GetDescription()
                            [@item.Vencimento]
                        </td>
                        <td>
                            @item.Tipo.GetDescription()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHoraUltimaGeracao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataUltimoMesGerado)
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>
