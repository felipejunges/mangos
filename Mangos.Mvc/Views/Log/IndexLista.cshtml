@model IEnumerable<Mangos.Dominio.Entities.Log>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aplicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td class="text-center" colspan="5">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aplicacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogLevel)
                    </td>
                    <td class="td-limite-40vw">
                        @Html.DisplayFor(modelItem => item.Mensagem)
                    </td>
                    <td class="text-right">
                        <open-modal-icon controller="Log" action="Consulta" value="@item.Id.ToString()" glyph-icon="search" class="edit-link"></open-modal-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
