@model IEnumerable<Mangos.Dominio.Entities.Usuario>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td style="text-align: right;">
                        <open-modal-icon controller="Usuario" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="Usuario" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
