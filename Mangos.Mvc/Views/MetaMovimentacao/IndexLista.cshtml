@model IEnumerable<Mangos.Dominio.Entities.MetaMovimentacao>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MesInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MesFinal)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.ValorMensal)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MesInicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MesFinal)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.ValorMensal)
                    </td>
                    <td class="text-right">
                        <open-modal-icon controller="MetaMovimentacao" action="Burnup" value="@item.Id.ToString()" glyph-icon="chart-area"></open-modal-icon>
                        <open-modal-icon controller="MetaMovimentacao" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="MetaMovimentacao" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
