@model IEnumerable<Mangos.Mvc.Models.ViewModels.SessaoAcessoListaModel>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraAtualizacao)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Persistente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Browser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAgent)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.IsMobile)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="9" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHoraAtualizacao)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Persistente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Browser)
                    </td>
                    <td class="td-limite-300">
                        @Html.DisplayFor(modelItem => item.UserAgent)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IsMobile)
                    </td>
                    <td class="text-right">
                        @if (!item.Deslogado)
                        {
                            <execute-action-icon controller="SessaoAcesso" action="Deslogar" value="@item.Id.ToString()" glyph-icon="sign-out-alt" confirmation-message="Confirma deslogar a sessão?"></execute-action-icon>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
