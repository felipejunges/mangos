@model Mangos.Mvc.Models.ViewModels.LancamentoPagamentoModel

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    ViewData["Title"] = "Pagamento da despesa";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.GrupoId)
    @Html.HiddenFor(model => model.Hash)
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(model => model.DataPagamento, htmlAttributes: new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.DataPagamento, new { htmlAttributes = new { @class = "form-control form-control-sm campoData" } })
                @Html.ValidationMessageFor(model => model.DataPagamento, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.ContaBancariaId, new { @class = "col-md-2 text-md-right col-form-label col-form-label-sm" })
            <div class="col-md-5">
                @Html.DropDownList("ContaBancariaId", ViewData["ContasBancariasLista"] as SelectList, "Nenhuma", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.ContaBancariaId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}