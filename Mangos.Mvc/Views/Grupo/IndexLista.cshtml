@model IEnumerable<Mangos.Dominio.Entities.Grupo>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td style="text-align: right;">
                        <open-modal-icon controller="Grupo" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <a href="@Url.Action("Detalhes", "Grupo", new { Id = item.Id })" glyph-icon="info-circle"></a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
