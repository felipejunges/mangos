@model IEnumerable<Mangos.Mvc.Models.ViewModels.TransferenciaContaListaModel>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContaBancariaOrigem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDebito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContaBancariaDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCredito)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContaBancariaOrigem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDebito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContaBancariaDestino)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCredito)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td class="text-right">
                        <open-modal-icon controller="TransferenciaConta" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="TransferenciaConta" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
