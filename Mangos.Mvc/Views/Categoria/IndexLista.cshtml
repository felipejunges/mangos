@model IEnumerable<Mangos.Mvc.Models.ViewModels.CategoriaListaModel>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Receita)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Despesa)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.RelatorioTotal)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        { 
            <tr>
                <td colspan="6" class="text-center">Nenhum resultado encontrado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="@(!item.Ativo ? "table-item-inativo" : "")">
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Receita)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Despesa)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.RelatorioTotal)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td style="text-align: right;">
                        <open-modal-icon controller="Categoria" action="Dados" value="@item.Id.ToString()" glyph-icon="edit"></open-modal-icon>
                        <excluir-icon controller="Categoria" value="@item.Id.ToString()"></excluir-icon>
                    </td>
                </tr>
            }
        }
    </table>
</div>
